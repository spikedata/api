{
  "name": "@spike/api",
  "version": "1.0.11",
  "description": "Spike API library helper",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "sideEffects": false,
  "author": "ilan@spikedata.co.za",
  "repository": "https://github.com/spikedata/api",
  "license": "SPIKE",
  "keywords": [
    "spike",
    "pdf",
    "south africa",
    "bank",
    "statements"
  ],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "build:rollup:main": "rollup -c rollup.config.js",
    "build:rollup:module": "rollup -c rollup.config.js",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "test": "run-s build test:*",
    "test:lint": "run-s fix:lint && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "ava-ts:run": "ava --serial --config ./ava.config.tsnode.cjs",
    "ava-ts:debug": "ava debug --break --serial --config ./ava.config.tsnode.cjs",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 20 --functions 50 --branches 20",
    "version": "standard-version",
    "reset": "run-s reset:check reset:force",
    "reset:check": "./scripts/git-check-uncommitted-changes.sh",
    "reset:force": "git clean -dfx && git reset --hard && npm update && npm i",
    "clean": "trash build coverage .nyc_output",
    "prepare-release": "run-s reset test cov:check version",
    "hack": "mocha -r ts-node/register ./test/index.js"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint and unit test the project",
    "ava-ts": "run ava on src typescript files - either run or debug",
    "watch": "Watch and rebuild the project on save, then rerun relevant tests",
    "cov": "Rebuild, run tests, then create and open the coverage report",
    "version": "Bump package.json version, update CHANGELOG.md, tag release",
    "reset": "Delete all untracked files and reset the repo to the last commit after checking for uncommitted changes",
    "prepare-release": "One-step: clean, build, test, and prep a release"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "ajv": "6.12.0",
    "axios": "0.19.2",
    "chai": "^4.2.0",
    "chai-uuid": "^1.0.6",
    "lodash.merge": "4.6.2",
    "mocha": "^7.1.2"
  },
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-json": "4.0.2",
    "@rollup/plugin-node-resolve": "7.1.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "ava": "^3.7.0",
    "codecov": "^3.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "rollup": "1.32.0",
    "rollup-plugin-babel": "4.3.3",
    "standard-version": "^6.0.1",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "build/main/**/*.spec.js"
    ],
    "ignoredByWatcher": [
      "build/main/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
